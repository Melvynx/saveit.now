{
  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(gh:*)",
      "Edit",
      "Bash(ls:*)",
      "Bash(git:*)",
      "Bash(find:*)",
      "mcp__context7"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun $CLAUDE_PROJECT_DIR/.claude/hooks/hook-post-file.ts"
          }
        ]
      }
    ]
  }
}