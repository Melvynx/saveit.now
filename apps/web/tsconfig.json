{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "e2e/**/*.mjs"
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "vitest.config.ts",
    "playwright.config.ts",
    ".next/*/**",
    "scripts/**/*"
  ]
}
